<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".OwnerFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvOwnerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/owner_title"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvOwnerInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Ad: Yönetici\nDaire: 01"
            app:layout_constraintTop_toBottomOf="@id/tvOwnerTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Token Yönetimi (Kilitli Durum) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLocked"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardBackgroundColor="?attr/colorErrorContainer"
            app:layout_constraintTop_toBottomOf="@id/tvOwnerInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Token Gerekli"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnErrorContainer"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Bu cihazı bir Owner olarak kullanmak için lütfen sistem yöneticisinden aldığınız Owner Token'ı yükleyin."
                    android:textColor="?attr/colorOnErrorContainer"/>
                <Button
                    android:id="@+id/btnScanTokenLocked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Token QR Kodu Tara"/>
                <Button
                    android:id="@+id/btnLoadTokenFromFileLocked"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Token Dosyadan Yükle"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Aktif Yönetim Paneli (Token Varsa Görünür) -->
        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupProvisioning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            app:constraint_referenced_ids="tvScopeTitle,tvScopeList,btnScanResidentQr,btnLoadResidentFromFile" />

        <TextView
            android:id="@+id/tvScopeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/owner_scope_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvOwnerInfo"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvScopeList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="01, 02, 03, 04, 05"
            app:layout_constraintTop_toBottomOf="@id/tvScopeTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btnScanResidentQr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/owner_button_scan_qr"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvScopeList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
            
        <Button
            android:id="@+id/btnLoadResidentFromFile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Resident QR Dosyadan Yükle"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintTop_toBottomOf="@id/btnScanResidentQr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
