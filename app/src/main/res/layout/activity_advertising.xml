<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".AdvertisingActivity">

        <!-- Coğrafi Konum Kartı -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardGeofenceStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coğrafi Konum Durumu"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tvGpsStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    tools:text="Durum: Konum aranıyor..."/>
                <TextView
                    android:id="@+id/tvGpsAccuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    tools:text="Doğruluk: 50m"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnResetGeofence"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coğrafi Konumu Sıfırla"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/cardGeofenceStatus"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Bilgi Giriş Bölümü -->
        <EditText
            android:id="@+id/etApartment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Daire No"
            android:inputType="text"
            android:maxLength="2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnResetGeofence"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Adı Soyadı"
            android:inputType="textPersonName"
            android:maxLength="20"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/etApartment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Spinner
            android:id="@+id/spinnerRelationship"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/etName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/etSignalId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Sinyal ID (6 hane)"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerRelationship"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kaydet ve QR Üret"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etSignalId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/ivQrCode"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/btnSave"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Yayın Kontrol Bölümü -->
        <Spinner
            android:id="@+id/spinnerTxPower"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/ivQrCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Spinner
            android:id="@+id/spinnerAdvMode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerTxPower"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/llBroadcastButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerAdvMode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btnStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Yayınla"
                android:enabled="false"
                android:layout_marginEnd="4dp"/>
            <Button
                android:id="@+id/btnStop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Durdur"
                android:enabled="false"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Anlık Durum Bilgisi -->
        <TextView
            android:id="@+id/tvCurrentTxPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            tools:text="Geçerli Güç: Yüksek"
            app:layout_constraintTop_toBottomOf="@id/llBroadcastButtons"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvCurrentAdvMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="Geçerli Periyot: Hızlı (100ms)"
            app:layout_constraintTop_toBottomOf="@id/tvCurrentTxPower"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
