<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".BroadcastActivity">

    <TextView
        android:id="@+id/tvBroadcastTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yayın Bilgileri"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etApartment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Daire No (2 karakter)"
        android:inputType="text"
        android:maxLength="2"
        app:layout_constraintTop_toBottomOf="@id/tvBroadcastTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Şifre (6 hane)"
        android:inputType="numberPassword"
        android:maxLength="6"
        app:layout_constraintTop_toBottomOf="@id/etApartment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnStartBroadcast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Yayını Başlat (3 Dakika)"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/tvBroadcastStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Durum: Beklemede"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btnStartBroadcast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
